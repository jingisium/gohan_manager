<nav class="navbar navbar-light bg-red">
  <span class="navbar-brand mt-2 h1">今日の献立</span>
  <%= link_to 'トップへ戻る', root_path, class: "nav-link"%>
</nav>
<%= form_with model: @plan_ingredient, url: plans_path, local: true do |f| %>
  <%= raw sprintf(f.date_select(:date, use_month_numbers: true, date_separator: '%s'),'年','月') + '日' %>
  <div>
    <div class="new-tips">
      今日作った料理をカレンダーに載せよう
    </div>
    <%= f.file_field :image %>
  </div>
  <div>
    <div class="new-tips">
      今日の献立を計画しよう
    </div>
    <%= f.text_area :title, placeholder: "例：肉じゃが、味噌汁、おひたし（３人分）", class: "form-control col-12", maxlength: 60 %>
  </div>
  <div class="form-row">
    <label for="input-ingredient-name">材料</label>
    <label for="input-amount">量</label>
  </div>
      <div class="form-group col-md-4 col-4">
        <%= f.text_field :name, placeholder: "例：じゃがいも", class: "form-control", id: "input-ingredient-name" %>
      </div>
    <div class="form-group col-md-4 col-4">
      <%= f.text_field :amount, placeholder: "例：3個", class: "form-control", id: "input-amount" %>
    </div>
    <div class="form-group col-md-4 col-4">
      <%= f.number_field :price, placeholder: "例：300", class: "form-control", id: "input-amount" %>
    </div>
  <%= f.submit '保存する' %>
<% end %>